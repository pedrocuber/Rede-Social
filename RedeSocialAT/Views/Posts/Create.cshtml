@model RedeSocialAT.Models.Post

@{
    ViewData["Title"] = "Crie sua postagem";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PerfilId" class="control-label"></label>
                <select asp-for="PerfilId" class ="form-control" asp-items="ViewBag.PerfilId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataPost" class="control-label"></label>
                <input asp-for="DataPost" class="form-control" />
                <span asp-validation-for="DataPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemPost" class="control-label"></label>
                <input type="file" asp-for="ImagemPost" class="form-control" accept="image/png, .jpeg, .jpg" />
                <span asp-validation-for="ImagemPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
